{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "E-IP Decision Log Schema",
  "type": "object",
  "properties": {
    "timestamp": { "type": "string", "format": "date-time" },
    "agent_id": { "type": "string" },
    "packet_hash": { "type": "string" },
    "consensus_result": { "type": "string" },
    "verifiers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "agent_id": { "type": "string" },
          "result": { "type": "string" }
        }
      }
    },
    "final_decision": { "type": "string" }
  },
  "required": ["timestamp", "agent_id", "packet_hash", "final_decision"]
}
